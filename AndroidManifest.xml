<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fireminder.podcastcatcher"
    android:versionCode="       9"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SEND_DOWNLOAD_COMPLETED_INTENTS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fireminder.podcastcatcher.activities.MainActivity"
            android:launchMode="singleTop"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:noHistory="false"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="itpc" />
                <data android:scheme="pcast" />
                <data android:scheme="feed" />
                <data android:scheme="rss" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:pathPattern=".*xml"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*rss"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*feed.*"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*podcast.*"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*Podcast.*"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*rss.*"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*RSS.*"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:mimeType="text/xml"
                    android:scheme="http" />
                <data
                    android:mimeType="application/rss+xml"
                    android:scheme="http" />
                <data
                    android:mimeType="application/atom+xml"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <service android:name="fireminder.podcastcatcher.services.ADownloadService" 
            android:enabled="true" android:exported="true">
            <intent-filter >
                <action android:name="fireminder.podcastcatcher.services.ADownloadService"/>
            </intent-filter>
        </service>
        <service android:name="fireminder.podcastcatcher.services.PlaybackService" 
            android:enabled="true">
            <intent-filter >
                <action android:name="fireminder.podcastcatcher.services.PlaybackService" />
                <action android:name="fireminder.PlaybackService.START" />
                <action android:name="fireminder.PlaybackService.STOP" />
                <action android:name="fireminder.PlaybackService.PAUSE" />
                <action android:name="fireminder.PlaybackService.REWIND" />
                <action android:name="fireminder.PlaybackService.FORWARD" />
            </intent-filter>
        </service>
        <service android:name="fireminder.podcastcatcher.services.BootService" >
        </service>

        <activity
            android:name="fireminder.podcastcatcher.activities.SearchActivity"
            android:label="Search" >
            <intent-filter>
                <action android:name="fireminder.podcastcatcher.SearchActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="fireminder.podcastcatcher.activities.ChannelActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="fireminder.podcastcatcher.ChannelActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name="fireminder.podcastcatcher.receivers.DmNotificationReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED" />
            </intent-filter>
        </receiver>

        <receiver android:name="fireminder.podcastcatcher.receivers.MediaButtonReceiver" 
            android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <receiver android:name="fireminder.podcastcatcher.receivers.BootBroadcastReciever" 
            android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETETD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>