<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/fireminder_small_card"
    android:padding="3dp"
    android:orientation="vertical" >
    <TextView
        android:typeface="serif"
        android:id="@+id/list_item_episode_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Episode 393: Red Card" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />
    <TextView 
        android:typeface="serif"
        android:id="@+id/list_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="4 Apr"
        />
	<ImageButton
	    android:id="@+id/play_icon_iv"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_alignParentRight="true"
	    android:src="@drawable/av_play"
	    android:visibility="invisible"
	    android:focusable="false"
	    	    />
</RelativeLayout>