<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/inch"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
>

    <ImageView
        android:id="@+id/list_item_recent_album_iv"
        android:layout_width="@dimen/inch"
        android:layout_height="@dimen/inch"
        android:layout_alignParentRight="true"
        android:src="#999" />

    <TextView
        android:id="@+id/list_item_recent_tv"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-light"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_recent_album_iv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/list_item_recent_descrip_tv"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_recent_tv"
        android:layout_toLeftOf="@id/list_item_recent_album_iv"
        android:layout_alignParentLeft="true"
        />
    <TextView 
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@color/light_grey"
        android:fontFamily="sans-serif"
        android:id="@+id/list_item_recent_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/list_item_recent_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/list_item_recent_star"
        android:src="@drawable/circle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_above="@id/date_tv"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        />

	<ImageButton 
        android:id="@+id/list_item_recent_download_or_play"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_alignParentLeft="true"
	    android:layout_above="@+id/list_item_recent_date_tv"
	    android:src="@drawable/ic_action_download"
	    android:background="@null"
	    />

	<ImageButton
	    android:id="@+id/list_item_recent_queue"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_above="@+id/list_item_recent_star"
	    android:layout_toRightOf="@+id/list_item_recent_download_or_play"
	    android:background="@null"
	    android:visibility="gone"
	    android:src="@drawable/ic_action_add_to_queue" />

</RelativeLayout>