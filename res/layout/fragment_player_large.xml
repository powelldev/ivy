<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Header -->

    <RelativeLayout
        android:id="@+id/fragment_player_header"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/fragment_player_small_album_cover"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:src="#000" />

        <TextView
            android:id="@+id/fragment_player_small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_player_small_album_cover"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="The Warded Man 03 o.."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment_player_small_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_player_small_title"
            android:layout_toRightOf="@id/fragment_player_small_album_cover"
            android:paddingLeft="5dp"
            android:text="Peter V. Brett"
            android:textSize="12sp" />
    </RelativeLayout>

    <!-- Footer -->

    <RelativeLayout
        android:id="@+id/fragment_player_footer"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="#eee" >

        <ImageButton
            android:id="@+id/fragment_player_playpause_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="#000" />

        <ImageButton
            android:id="@+id/fragment_player_rewind_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/fragment_player_playpause_icon"
            android:background="@null"
            android:src="#000" />

        <ImageButton
            android:id="@+id/fragment_player_ff_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fragment_player_playpause_icon"
            android:background="@null"
            android:src="#000" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/fragment_player_large_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fragment_player_footer"
        android:layout_below="@id/fragment_player_header"
        android:src="#93f" />

    <SeekBar
        android:id="@+id/fragment_player_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="53dp" />

</RelativeLayout>